@model ConsommiTounsi.Models.UserConsomi

@{
    ViewBag.Title = "SignIn";
}

@{
    Layout = null;
}
<!doctype html>
<html lang="en">


<head>

    <meta charset="utf-8" />
    <title>Dashboard | Minible - Admin & Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesbrand" name="author" />
    @Html.Partial("~/Views/Shared/AdminTemplate/_Styles.cshtml")


</head>

<body class="authentication-bg">


    <div class="account-pages ">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center">
                        <a href="index.html" class="mb-5 d-block auth-logo">
                            <img src="/Frontend/assets/images/logo.png" alt="" height="60">
                        </a>
                    </div>
                </div>
            </div>
            <div class="row align-items-center justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card">

                        <div class="card-body p-4">
                            <div class="text-center mt-2">
                                <h5 class="text" style="color:#f42020;">Welcome To  Consomi Tounsi !</h5>
                                <p class="text-muted">Sign in to continue.</p>
                            </div>
                            <div class="p-2 mt-4">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="mb-3">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "form-label" })
                                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @id = "username", placeholder = "Enter your email", @style = "width:100% !important; min-width:380px;" } })
                                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label" })
                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @id = "username", placeholder = "Enter your email", @style = "width:100% !important; min-width:380px;" } })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3">

                                        <div class="form-group">



                                            <div class="mb-3">
                                                <div class="float-end">
                                                    <a href="auth-recoverpw.html" class="text-muted">Forgot password?</a>
                                                </div>
                                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label" })
                                                @Html.EditorFor(model => model.Password, new
                                           {
                                               htmlAttributes = new
                                               {
                                                   @class = "form-control",
                                                   placeholder = "Enter your password",
                                                   @id = "userpassword",
                                                   @style = "width:100% !important; min-width:380px;"
                                               }
                                           })
                                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Tel, htmlAttributes: new { @class = "form-label" })
                                                @Html.EditorFor(model => model.Tel, new { htmlAttributes = new { @class = "form-control", @id = "username", placeholder = "Enter your email", @style = "width:100% !important; min-width:380px;" } })
                                                @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="mb-3">

                                            <div class="form-group">
                                                <label for="exampleFormControlSelect1">Role</label>
                                                <select class="form-select" aria-label="Default select example" style="width: 100% !important; min-width: 380px;">
                                                    <option selected>SPONSOR</option>
                                                    <option value="1">MANAGER EVENT</option>
                                                    <option value="2">MANAGER ASILE</option>
                                                    <option value="4">MANAGER STOCK</option>
                                                    <option value="5">MANAGER SELL</option>
                                                </select>
                                            </div>

                                        </div>

                                        <div class="mt-3 text-end">
                                            <button class="btn btn-primary w-sm waves-effect waves-light" type="submit" style="background-color:#f42020;border:none;">Sign Up</button>
                                        </div>
                                    </div>






                                        <div class="mt-4 text-center">

                                            <p class="mb-0">
                                                You are already have account?
                                                <a href="@Url.Action("SignIn") " class="fw - medium text">Sign In</a>
                                        </div>

                                        }
                                    </div>

                        </div>
                    </div>

                    <div class="mt-5 text-center">
                        <p>
                            ©
                            <script>document.write(new Date().getFullYear())</script> Consomi Tounsi website made by Esprit Students
                        </p>
                    </div>

                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>


    @Html.Partial("~/Views/Shared/AdminTemplate/_Scripts.cshtml")



</body>
</html>
